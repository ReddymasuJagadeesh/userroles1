@{
    ViewData["Title"] = "Email Sent Successfully";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Email Sent</h2>

        <p class="text-center">
            A verification link has been sent to your email address.
        </p>
        <p class="text-center">
            Please check your email.
        </p>

        @* 🔐 Forgot Password Limit Info *@
        @if (TempData["RemainingAttempts"] != null)
        {
            <div class="alert alert-info text-center mt-3">
                You have
                <strong>@TempData["RemainingAttempts"]</strong>
                password reset attempt(s) remaining today.
            </div>
        }

        <div class="text-center mt-3">
            <a asp-controller="Account"
               asp-action="Login"
               class="text-decoration-none">
                Back to Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
