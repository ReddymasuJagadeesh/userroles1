@model UserRoles.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Report Details";
    bool isAdminOrManager = User.IsInRole("Admin") || User.IsInRole("Manager");
}

<div class="card mt-4 shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Report Details</h4>
    </div>

    <div class="card-body">
        <dl class="row">

            @* ✅ Show name only for Admin / Manager *@
            @if (isAdminOrManager)
            {
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">
                    @Model.DisplayName
                </dd>
            }

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">
                @Model.Date.ToString("yyyy-MM-dd")
            </dd>

            <dt class="col-sm-3">Task</dt>
            <dd class="col-sm-9">
                @Model.Task
            </dd>

            <dt class="col-sm-3">Note</dt>
            <dd class="col-sm-9">
                @Model.Note
            </dd>

            <dt class="col-sm-3">Reported To</dt>
            <dd class="col-sm-9">
                @Model.ReportedTo
            </dd>

            <dt class="col-sm-3">Submitted By</dt>
            <dd class="col-sm-9">
                @Model.SubmittedByRole
            </dd>

            @* ❌ Created At REMOVED *@
            @* ❌ Reviewer Comment REMOVED *@

        </dl>
    </div>

    <div class="card-footer d-flex gap-2">
        <a asp-action="UserReports"
           asp-controller="Reports"
           asp-route-userId="@Model.ApplicationUserId"
           class="btn btn-secondary">
            ← Back to Reports
        </a>

        @if (isAdminOrManager)
        {
            <a asp-action="Index"
               asp-controller="Users"
               class="btn btn-outline-dark">
                ← Back to Users
            </a>
        }
    </div>
</div>
