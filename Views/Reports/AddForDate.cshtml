@model UserRoles.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Add Report";
}

<div class="card shadow-sm">
    <div class="card-body">

        <h5 class="mb-3">
            Add Report for <strong>@Model.FirstName</strong>
        </h5>

        <p class="text-muted">
            📅 Date: <strong>@Model.Date.ToString("yyyy-MM-dd")</strong>
        </p>

        <form asp-action="AddForDate" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="ApplicationUserId" />
            <input type="hidden" asp-for="Date" />

            <div class="mb-3">
                <label class="form-label">Task</label>
                <textarea asp-for="Task"
                          rows="3"
                          class="form-control"
                          required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Note</label>
                <textarea asp-for="Note"
                          rows="3"
                          class="form-control"
                          required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Reported To</label>
                <input asp-for="ReportedTo"
                       class="form-control"
                       placeholder="Admin / Manager" />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-success">
                    Submit Report
                </button>

                <a asp-action="UserReports"
                   asp-route-userId="@Model.ApplicationUserId"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>
