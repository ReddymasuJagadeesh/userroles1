@model IEnumerable<UserRoles.Models.AssignedTask>

<h3>Assigned Tasks</h3>

<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>Task</th>
            <th>Priority</th>
            <th>Assigned By</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>
                    <span class="badge bg-@(task.Priority == "High" ? "danger" : task.Priority == "Medium" ? "warning" : "secondary")">
                        @task.Priority
                    </span>
                </td>
                <td>@task.AssignedBy?.Name</td>
                <td>@task.CreatedAt.ToLocalTime().ToString("dd-MM-yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
